<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--不能用时显示的图片-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/phr_width_2"/>
            <solid android:color="@color/color_button_disable"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/phr_width_2"/>
            <solid android:color="@color/color_login_button_normal_press"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/phr_width_2"/>
            <solid android:color="@color/color_login_button_normal_press"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/phr_width_2"/>
            <solid android:color="@color/color_login_button_normal"/>
        </shape>
    </item>
</selector>