<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/phr_margin_1"
    android:background="@color/phr_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/phr_width_25"
        android:layout_marginTop="@dimen/phr_margin_2">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/phr_width_20"
            android:layout_height="@dimen/phr_width_20"
            tools:src="@mipmap/phr_logo_fl"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:id="@+id/phr_rv_my_article_comment_icon"
            app:riv_oval="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/phr_margin_2"
            android:layout_marginRight="@dimen/phr_margin_2"
            android:paddingTop="@dimen/phr_padding_1"
            android:paddingBottom="@dimen/phr_padding_1"
            android:layout_toRightOf="@+id/phr_rv_my_article_comment_icon"
            android:layout_toEndOf="@+id/phr_rv_my_article_comment_icon"
            android:id="@+id/phr_rv_my_article_comment_container">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="@string/phr_community_name"
                android:textColor="@color/color_text_title"
                android:padding="@dimen/phr_padding_1"
                android:textSize="@dimen/phr_text_size_12"
                android:id="@+id/phr_rv_my_article_comment_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="@string/phr_rv_my_article_comment_date"
                android:textColor="@color/color_text_hint"
                android:padding="@dimen/phr_padding_1"
                android:textSize="@dimen/phr_text_size_10"
                android:id="@+id/phr_rv_my_article_comment_date"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phr_rv_my_article_comment_author"
            android:textColor="@color/color_text_title"
            android:padding="@dimen/phr_padding_2"
            android:textSize="@dimen/phr_text_size_10"
            android:id="@+id/phr_rv_my_article_author"
            android:layout_toRightOf="@+id/phr_rv_my_article_comment_container"
            android:layout_toEndOf="@+id/phr_rv_my_article_comment_container"
            android:background="@drawable/phr_rv_my_article_text_bg"
            android:layout_marginTop="@dimen/phr_margin_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/phr_rv_my_article_comment_id"
            android:textColor="@color/color_text_hint"
            android:layout_margin="@dimen/phr_margin_2"
            android:textSize="@dimen/phr_text_size_10"
            android:id="@+id/phr_rv_my_article_comment_id"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="@dimen/phr_margin_22"
       android:layout_marginStart="@dimen/phr_margin_22"
       android:layout_marginTop="@dimen/phr_margin_1"
       android:layout_marginBottom="@dimen/phr_margin_1"
       android:paddingLeft="@dimen/phr_padding_1"
       android:background="@color/color_text_hint"
       android:paddingStart="@dimen/phr_padding_1"
       tools:ignore="RtlSymmetry"
       android:id="@+id/phr_rv_my_article_is_reply_see">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:text="@string/phr_rv_my_article_comment_reference"
           android:id="@+id/phr_rv_my_article_comment_reference"
           android:lineSpacingExtra="@dimen/phr_padding_1"
           android:textColor="@color/color_text_title" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:text="@string/comment"
           android:layout_marginTop="@dimen/phr_margin_2"
           android:id="@+id/phr_rv_my_article_comment_reply_other"
           android:lineSpacingExtra="@dimen/phr_padding_1"
           android:textColor="@color/color_text_sub_title"/>
   </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/comment"
        android:layout_marginLeft="@dimen/phr_margin_22"
        android:layout_marginStart="@dimen/phr_margin_22"
        android:layout_marginTop="@dimen/phr_margin_1"
        android:layout_marginBottom="@dimen/phr_margin_3"
        android:id="@+id/phr_rv_my_article_comment_comment"
        android:lineSpacingExtra="@dimen/phr_padding_1"
        android:textColor="@color/color_text_sub_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/phr_margin_22"
        android:layout_marginTop="@dimen/phr_margin_3"
        android:layout_marginBottom="@dimen/phr_margin_3"
        android:layout_marginStart="@dimen/phr_margin_22">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="@dimen/phr_width_15"
                android:layout_height="@dimen/phr_width_15"
                android:src="@raw/like"
                android:id="@+id/phr_rv_my_article_comment_like"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="#FF6666"
                app:allow_random_color="false"
                app:enable_flashing="false"
                app:big_shine_color="#FF6666"
                app:small_shine_color="#CC9999"
                app:click_animation_duration="200"
                app:shine_animation_duration="1500"
                app:shine_count="15"
                app:shine_distance_multiple="1.5"
                app:shine_turn_angle="10"
                app:siShape="@raw/like"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="@dimen/phr_text_size_12"
                android:layout_marginLeft="@dimen/phr_margin_1"
                tools:text="@string/phr_rv_my_article_comment_like_count"
                android:layout_marginStart="@dimen/phr_margin_1"
                android:textColor="@color/color_text_hint"
                android:id="@+id/phr_rv_my_article_comment_like_count"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/phr_text_size_12"
                android:layout_marginLeft="@dimen/phr_margin_15"
                android:text="@string/phr_rv_my_article_comment_reply"
                android:layout_marginStart="@dimen/phr_margin_15"
                android:textColor="@color/color_text_hint"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:id="@+id/phr_rv_my_article_comment_reply"
                tools:ignore="KeyboardInaccessibleWidget" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/phr_text_size_12"
                android:layout_marginLeft="@dimen/phr_margin_15"
                android:text="@string/phr_rv_my_article_comment_show_reply"
                android:layout_marginStart="@dimen/phr_margin_15"
                android:textColor="@color/color_text_hint"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:id="@+id/phr_rv_my_article_comment_show_reply"
                tools:ignore="KeyboardInaccessibleWidget"
                android:visibility="invisible" />
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/phr_width_12"
            android:layout_height="@dimen/phr_width_12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/phr_community_more"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:id="@+id/phr_rv_my_article_comment_more"
            tools:ignore="KeyboardInaccessibleWidget" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/phr_divide_1"
        android:background="@color/color_view_divide_bg_color"
        android:layout_marginTop="@dimen/phr_margin_1"/>
</LinearLayout>