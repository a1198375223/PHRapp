<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/phr_white">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/phr_white"
        app:navigationIcon="@drawable/phr_arrow_back_black_24"
        android:id="@+id/phr_activity_show_reply_toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_title"
            tools:text="@string/phr_activity_show_reply_title"
            android:text="@string/phr_activity_show_reply_title"
            android:layout_gravity="center"
            android:textSize="@dimen/phr_text_size_20"
            android:id="@+id/phr_show_reply_toolbar_title"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/phr_activity_show_reply_recycler_view"
        android:layout_below="@id/phr_activity_show_reply_toolbar"
        android:paddingLeft="@dimen/phr_padding_5"
        android:paddingRight="@dimen/phr_padding_5"
        android:layout_marginTop="@dimen/phr_margin_2"
        android:background="@color/phr_white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/phr_white"
        android:id="@+id/show_reply_container"
        android:visibility="invisible">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:id="@+id/phr_activity_show_reply_edit"
            android:background="@drawable/phr_my_article_edit_bg"
            android:textColor="@color/color_text_sub_title"
            android:textColorHint="@color/color_text_hint"
            android:hint="@string/phr_article_fragment_reply"
            android:padding="@dimen/phr_padding_4"
            android:textSize="@dimen/phr_text_size_14"
            android:drawableLeft="@drawable/ic_write_black_24dp"
            android:drawableStart="@drawable/ic_write_black_24dp"
            android:layout_toLeftOf="@+id/phr_activity_show_reply_submit"
            android:layout_toStartOf="@+id/phr_activity_show_reply_submit"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/phr_activity_show_reply_submit"
            android:text="@string/phr_article_fragment_submit"
            android:layout_centerVertical="true"
            android:background="@drawable/phr_article_reply_button_bg"
            android:clickable="false"
            android:textColor="@color/color_text_title"
            android:textColorHint="@color/color_text_hint" />
    </RelativeLayout>
</RelativeLayout>