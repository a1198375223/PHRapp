<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/phr_padding_5"
    android:paddingRight= "@dimen/phr_padding_5"
    android:background="@color/phr_white"
    android:layout_marginBottom="@dimen/phr_margin_1"
    android:layout_marginTop="@dimen/phr_margin_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/phr_width_25">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/phr_width_20"
            android:layout_height="@dimen/phr_width_20"
            tools:src="@mipmap/phr_logo_fl"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:id="@+id/phr_rv_my_article_icon"
            app:riv_oval="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/phr_margin_2"
            android:layout_marginRight="@dimen/phr_margin_2"
            android:paddingTop="@dimen/phr_padding_1"
            android:paddingBottom="@dimen/phr_padding_1"
            android:layout_toRightOf="@+id/phr_rv_my_article_icon"
            android:layout_toEndOf="@+id/phr_rv_my_article_icon">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="@string/phr_community_name"
                android:textColor="@color/color_text_title"
                android:padding="@dimen/phr_padding_1"
                android:textSize="@dimen/phr_text_size_12"
                android:id="@+id/phr_rv_my_article_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="@string/phr_community_description"
                android:textColor="@color/color_text_hint"
                android:padding="@dimen/phr_padding_2"
                android:textSize="@dimen/phr_text_size_10"
                android:id="@+id/phr_rv_my_article_description"/>
        </LinearLayout>

        <com.nightonke.boommenu.BoomMenuButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phr_rv_my_article_share"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@color/phr_white"
            app:bmb_inList="true"
            app:bmb_inFragment="true"
            android:padding="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phr_rv_my_article_time"
            android:textColor="@color/color_text_hint"
            android:layout_toLeftOf="@+id/phr_rv_my_article_share"
            tools:text="@string/phr_community_time"
            android:layout_centerVertical="true"
            android:textSize="@dimen/phr_text_size_12"
            android:layout_toStartOf="@+id/phr_rv_my_article_share"
            android:layout_marginRight="@dimen/phr_margin_2"
            android:layout_marginEnd="@dimen/phr_margin_2"
            android:padding="@dimen/phr_padding_2"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/phr_text_size_12"
        android:textColor="@color/color_text_title"
        tools:text="@string/phr_community_title"
        android:id="@+id/phr_rv_my_article_title"
        android:paddingTop="@dimen/phr_padding_2"
        android:paddingBottom="@dimen/phr_padding_2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/phr_text_size_10"
        android:textColor="@color/color_text_hint"
        tools:text="@string/phr_community_text"
        android:id="@+id/phr_rv_my_article_body_text"
        android:paddingTop="@dimen/phr_padding_2"
        android:paddingBottom="@dimen/phr_padding_2"
        android:maxLines="3"
        android:layout_marginBottom="@dimen/phr_margin_3"/>

</LinearLayout>