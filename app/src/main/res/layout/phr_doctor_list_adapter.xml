<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctor_image"
            android:layout_width="@dimen/phr_width_60"
            android:layout_height="@dimen/phr_width_60"
            android:layout_margin="@dimen/phr_margin_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/phr_margin_5"
            android:layout_marginLeft="@dimen/phr_margin_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/phr_margin_5">

                <TextView
                    android:id="@+id/doctor_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/phr_black"
                    android:textSize="@dimen/phr_text_size_15" />

                <TextView
                    android:id="@+id/doctor_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/phr_margin_3"
                    android:textSize="@dimen/phr_text_size_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/doctor_profile_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/phr_text_size_15"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phr_treatment_doc_work_time"
        android:layout_marginLeft="@dimen/phr_margin_3"
        android:textSize="@dimen/phr_text_size_20"/>

    <GridView
        android:id="@+id/doctor_work_time_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:verticalSpacing="@dimen/phr_padding_5"
        android:fitsSystemWindows="true"
        android:layout_marginTop="@dimen/phr_margin_5"
        android:textAlignment="center"/>

</LinearLayout>