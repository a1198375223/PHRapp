<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/phr_white"
    android:orientation="vertical">

    <include layout="@layout/phr_register_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/phr_margin_15"
        android:orientation="vertical"
        android:paddingLeft="@dimen/phr_padding_12"
        android:paddingRight="@dimen/phr_padding_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/phr_username_fl" />

            <EditText
                android:id="@+id/phr_register_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="@string/phr_register_username_hint"
                android:inputType="text"
                android:textColorHint="@color/color_login_text4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/phr_phone_fl" />

            <EditText
                android:id="@+id/phr_register_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="@string/phr_register_phone_hint"
                android:inputType="phone"
                android:textColorHint="@color/color_login_text4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/phr_password_fl" />

            <EditText
                android:id="@+id/phr_register_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:layout_toEndOf="@+id/image"
                android:layout_toLeftOf="@+id/view"
                android:layout_toRightOf="@+id/image"
                android:layout_toStartOf="@+id/view"
                android:background="@null"
                android:hint="@string/phr_register_password_hint"
                android:inputType="textPassword"
                android:textColorHint="@color/color_login_text4" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/phr_height_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/phr_margin_3"
                android:layout_marginLeft="@dimen/phr_margin_1"
                android:layout_marginRight="@dimen/phr_margin_1"
                android:layout_marginTop="@dimen/phr_margin_3"
                android:layout_toLeftOf="@+id/phr_register_see_password"
                android:layout_toStartOf="@+id/phr_register_see_password"
                android:background="@drawable/phr_shape_gradient_line" />
            <!--<ImageView-->
            <!--android:layout_width="@dimen/phr_width_20"-->
            <!--android:layout_height="@dimen/phr_width_20"-->
            <!--android:src="@mipmap/phr_see_password_fl"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:scaleType="fitXY"-->
            <!--android:id="@+id/phr_register_see_password"-->
            <!--android:layout_alignParentEnd="true" />-->
            <CheckBox
                android:id="@+id/phr_register_see_password"
                android:layout_width="@dimen/phr_width_20"
                android:layout_height="@dimen/phr_width_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/phr_password_fl" />

            <EditText
                android:id="@+id/phr_register_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="@string/phr_register_repeat_password_hint"
                android:inputType="textPassword"
                android:textColorHint="@color/color_login_text4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <RadioGroup
            android:id="@+id/phr_register_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/phr_height_6"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/phr_register_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phr_register_man" />

            <RadioButton
                android:id="@+id/phr_register_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phr_register_girl" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/phr_email_fl" />

            <EditText
                android:id="@+id/phr_register_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="@string/phr_register_email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/color_login_text4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/phr_register_hospital" />

            <EditText
                android:id="@+id/phr_register_hospital"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="所属医院"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/color_login_text4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/phr_register_title" />

            <EditText
                android:id="@+id/phr_register_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="所在职位"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/color_login_text4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:layout_marginTop="@dimen/phr_margin_3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_20"
                android:layout_height="@dimen/phr_height_20"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/phr_register_dept" />

            <EditText
                android:id="@+id/phr_register_department"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:background="@null"
                android:hint="所在部门"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/color_login_text4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <Button
            android:id="@+id/phr_register_submit"
            style="@style/PHR.Button.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phr_height_10"
            android:text="@string/phr_register_submit"
            android:textSize="@dimen/phr_text_size_20" />

    </LinearLayout>
</LinearLayout>