<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/phr_main_navigation_view_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_main_image_bg">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        app:riv_oval="true"
        android:layout_margin="20dp"
        android:id="@+id/phr_main_navigation_view_header_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/phr_main_navigation_view_header_icon"
        android:layout_toEndOf="@+id/phr_main_navigation_view_header_icon"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/phr_main_navigation_view_header_name"
            android:id="@+id/phr_main_navigation_view_header_name_text"
            android:textSize="@dimen/phr_main_navigation_view_header_name_size"
            android:padding="@dimen/phr_main_text_padding"
            android:layout_margin="@dimen/phr_main_navigation_view_header_text_margin_distance"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/phr_main_navigation_view_header_note"
            android:padding="@dimen/phr_main_text_padding"
            android:id="@+id/phr_main_navigation_view_header_note_text"
            android:textSize="@dimen/phr_main_navigation_view_header_note_size"
            android:layout_margin="@dimen/phr_main_navigation_view_header_text_margin_distance"/>

    </LinearLayout>




</RelativeLayout>