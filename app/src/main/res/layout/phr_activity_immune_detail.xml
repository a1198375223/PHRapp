<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/phr_white">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/phr_detail_immune_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/phr_white"
        app:navigationIcon="@drawable/phr_arrow_back_black_24"
        app:title="疫苗详情">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/phr_padding_12"
        android:paddingRight="@dimen/phr_padding_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_15"
                android:layout_height="@dimen/phr_height_15"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/immune_name" />

            <TextView
                android:id="@+id/phr_detail_immune_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:text="疫苗种类"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_15"
                android:layout_height="@dimen/phr_height_15"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/immune_age" />

            <TextView
                android:id="@+id/phr_detail_immune_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:text="接种年龄"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_15"
                android:layout_height="@dimen/phr_height_15"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/immune_times" />

            <TextView
                android:id="@+id/phr_detail_immune_times"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:text="接种次数"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_25"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/phr_height_15"
                android:layout_height="@dimen/phr_height_15"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/immune_type" />

            <TextView
                android:id="@+id/phr_detail_immune_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/phr_margin_3"
                android:layout_marginStart="@dimen/phr_margin_3"
                android:text="预防疾病种类"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_height_1"
            android:background="@drawable/phr_shape_gradient_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/phr_detail_immune_content"
                android:layout_width="match_parent"
                android:text="疫苗详情"
                android:layout_height="250dp"
                android:scrollbars="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_line_color"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>