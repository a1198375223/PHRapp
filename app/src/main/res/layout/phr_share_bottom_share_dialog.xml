<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/phr_margin_4"
    android:background="@drawable/phr_bottom_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/phr_share_dialog_weibo_bg"
            android:gravity="center"
            android:paddingTop="@dimen/phr_padding_6"
            android:paddingBottom="@dimen/phr_padding_6"
            android:id="@+id/phr_share_weibo">
            <ImageView
                android:layout_width="@dimen/phr_width_25"
                android:layout_height="@dimen/phr_width_25"
                android:src="@drawable/ssdk_oks_classic_sinaweibo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/phr_share_dialog_weibo"
                android:textSize="@dimen/phr_text_size_12"
                android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/phr_share_dialog_wechat_bg"
            android:gravity="center"
            android:paddingTop="@dimen/phr_padding_6"
            android:paddingBottom="@dimen/phr_padding_6"
            android:id="@+id/phr_share_wechat">
            <ImageView
                android:layout_width="@dimen/phr_width_25"
                android:layout_height="@dimen/phr_width_25"
                android:src="@drawable/ssdk_oks_classic_wechat"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/phr_share_dialog_wechat"
                android:textSize="@dimen/phr_text_size_12"
                android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/phr_share_dialog_qq_bg"
            android:gravity="center"
            android:paddingTop="@dimen/phr_padding_6"
            android:paddingBottom="@dimen/phr_padding_6"
            android:id="@+id/phr_share_qq">
            <ImageView
                android:layout_width="@dimen/phr_width_25"
                android:layout_height="@dimen/phr_width_25"
                android:src="@drawable/ssdk_oks_classic_qq"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/phr_share_dialog_qq"
                android:textSize="@dimen/phr_text_size_12"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/phr_bottom_dialog_item_exit_bg"
        android:clickable="true"
        android:layout_marginTop="@dimen/phr_margin_5"
        android:gravity="center"
        android:padding="@dimen/phr_padding_8"
        android:text="@string/phr_share_dialog_cancel"
        android:textColor="#666666"
        android:textSize="@dimen/phr_text_size_14"
        android:id="@+id/phr_share_cancel"
        tools:ignore="KeyboardInaccessibleWidget" />
</LinearLayout>