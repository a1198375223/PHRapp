<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/phr_white"
    android:paddingLeft="@dimen/phr_padding_3"
    android:paddingRight="@dimen/phr_padding_3"
    android:paddingTop="@dimen/phr_padding_3"
    android:paddingBottom="@dimen/phr_padding_1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/phr_search_result_title"
        android:textSize="@dimen/phr_text_size_16"
        android:textColor="@color/color_text_title"
        android:id="@+id/phr_rv_search_result_title"
        android:padding="@dimen/phr_padding_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phr_rv_search_result_title"
        android:paddingBottom="@dimen/phr_padding_1"
        android:id="@+id/container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/phr_search_result_time"
            android:textSize="@dimen/phr_text_size_12"
            android:textColor="@color/color_text_hint"
            android:padding="@dimen/phr_padding_1"
            android:layout_marginLeft="@dimen/phr_margin_5"
            android:layout_marginStart="@dimen/phr_margin_5"
            android:id="@+id/phr_search_result_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/phr_search_result_time"
            tools:text="@string/phr_search_result_author"
            android:textSize="@dimen/phr_text_size_12"
            android:textColor="@color/color_text_hint"
            android:padding="@dimen/phr_padding_1"
            android:layout_marginLeft="@dimen/phr_margin_3"
            android:layout_marginStart="@dimen/phr_margin_3"
            android:id="@+id/phr_search_result_author"
            android:layout_toEndOf="@+id/phr_search_result_time" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/phr_rv_search_result_comment_container"
            android:layout_toStartOf="@+id/phr_rv_search_result_comment_container"
            android:layout_marginRight="@dimen/phr_margin_2"
            android:layout_marginEnd="@dimen/phr_margin_2"
            android:id="@+id/phr_rv_search_result_like_container">
            <ImageView
                android:layout_width="@dimen/phr_width_10"
                android:layout_height="@dimen/phr_width_10"
                android:src="@mipmap/phr_search_result_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/phr_search_result_like"
                android:textSize="@dimen/phr_text_size_10"
                android:textColor="@color/color_text_hint"
                android:padding="@dimen/phr_padding_1"
                android:id="@+id/phr_search_result_like" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/phr_rv_search_result_comment_container">
            <ImageView
                android:layout_width="@dimen/phr_width_10"
                android:layout_height="@dimen/phr_width_10"
                android:src="@mipmap/phr_search_result_message"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/phr_search_result_comment"
                android:textSize="@dimen/phr_text_size_10"
                android:textColor="@color/color_text_hint"
                android:padding="@dimen/phr_padding_1"
                android:id="@+id/phr_rv_search_result_comment" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/phr_divide_1"
        android:background="@color/color_view_divide_bg_color"
        android:layout_below="@+id/container"/>
</RelativeLayout>