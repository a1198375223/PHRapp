<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/phr_margin_7"
    android:layout_marginLeft="@dimen/phr_margin_3"
    android:layout_marginRight="@dimen/phr_margin_3">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/evaluate_head_image"
        android:layout_width="@dimen/phr_width_30"
        android:layout_height="@dimen/phr_height_30"
        android:layout_marginLeft="@dimen/phr_margin_3"
        android:layout_marginTop="@dimen/phr_margin_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/phr_margin_4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/evaluate_user_name_tv"
                android:layout_width="@dimen/phr_width_90"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="@color/phr_black"
                android:textSize="@dimen/phr_text_size_17" />

            <TextView
                android:id="@+id/evaluate_grade_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/phr_margin_10"
                android:text="5"
                android:textColor="@color/phr_main_page_text_color"
                android:textSize="@dimen/phr_text_size_25"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/evaluate_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/phr_margin_4"
            android:layout_marginTop="@dimen/phr_margin_4"
            android:text="用户的评价.."
            android:textSize="@dimen/phr_text_size_12"
            android:textColor="@color/phr_black"/>

        <TextView
            android:id="@+id/evaluate_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phr_margin_6"
            android:text="2018-08-06"
            android:textSize="@dimen/phr_text_size_10"/>
    </LinearLayout>

</LinearLayout>