<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/phr_record_data"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="日期：2018/8/1"
        android:textSize="20sp"
        android:gravity="center" />
    <TextView
        android:id="@+id/phr_record_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="内容体检记录、临床记录各项内容"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/phr_record_hospital_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="四川省华西医院"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_line_color" />

</LinearLayout>