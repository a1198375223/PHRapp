<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="@dimen/phr_width_22"
    android:background="@color/phr_white"
    android:paddingRight="@dimen/phr_padding_3"
    android:paddingLeft="@dimen/phr_padding_3"
    android:paddingTop="@dimen/phr_padding_1"
    android:paddingBottom="@dimen/phr_padding_1">

    <ImageView
        android:layout_width="@dimen/phr_width_15"
        android:layout_height="@dimen/phr_width_15"
        android:src="@mipmap/phr_search_history"
        android:layout_centerVertical="true"
        android:id="@+id/phr_rv_search_history_image"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/phr_rv_search_history_image"
        android:layout_toEndOf="@+id/phr_rv_search_history_image">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="@string/phr_search_history_result"
            android:layout_above="@+id/divide"
            android:gravity="center_vertical"
            android:id="@+id/phr_rv_search_history_result"
            android:layout_marginLeft="@dimen/phr_margin_3"
            android:textColor="@color/color_text_sub_title"
            android:textSize="@dimen/phr_text_size_14"
            android:maxLines="1"
            android:layout_marginStart="@dimen/phr_margin_3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/phr_divide_1"
            android:background="@color/color_view_divide_bg_color"
            android:layout_alignParentBottom="true"
            android:id="@+id/divide"/>
    </RelativeLayout>

</RelativeLayout>