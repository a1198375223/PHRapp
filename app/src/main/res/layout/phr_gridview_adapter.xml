<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/phr_main_grid_view_image"
        android:layout_width="@dimen/phr_width_65"
        android:layout_height="@dimen/phr_width_65"
        tools:src="@mipmap/phr_message_fl"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/phr_main_gridlayout_margin" />
    <TextView
        android:id="@+id/phr_main_grid_view_text"
        android:layout_width="@dimen/phr_width_65"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="@string/phr_main_gridlayout_text1"
        android:textSize="@dimen/phr_main_gridlayout_text_size"
        android:padding="@dimen/phr_main_text_padding"
        android:layout_margin="@dimen/phr_main_gridlayout_margin" />

</LinearLayout>