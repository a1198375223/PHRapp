<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/phr_padding_5"
    android:paddingRight= "@dimen/phr_padding_5"
    android:background="@color/phr_white"
    android:layout_marginBottom="@dimen/phr_margin_1"
    android:layout_marginTop="@dimen/phr_margin_1">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/phr_width_25">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/phr_width_20"
            android:layout_height="@dimen/phr_width_20"
            tools:src="@mipmap/phr_logo_fl"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:id="@+id/phr_rv_community_message_icon"
            app:riv_oval="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/phr_margin_2"
            android:layout_marginRight="@dimen/phr_margin_2"
            android:paddingTop="@dimen/phr_padding_1"
            android:paddingBottom="@dimen/phr_padding_1"
            android:layout_toRightOf="@+id/phr_rv_community_message_icon"
            android:layout_toEndOf="@+id/phr_rv_community_message_icon">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="@string/phr_community_name"
                android:textColor="@color/color_text_title"
                android:padding="@dimen/phr_padding_1"
                android:textSize="@dimen/phr_text_size_12"
                android:id="@+id/phr_rv_community_message_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="@string/phr_community_description"
                android:textColor="@color/color_text_hint"
                android:padding="@dimen/phr_padding_2"
                android:textSize="@dimen/phr_text_size_10"
                android:id="@+id/phr_rv_community_message_description"/>
        </LinearLayout>

        <com.nightonke.boommenu.BoomMenuButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bmb_inList="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/phr_rv_community_message_share"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phr_rv_community_message_time"
            android:textColor="@color/color_text_hint"
            android:layout_toLeftOf="@+id/phr_rv_community_message_share"
            tools:text="@string/phr_community_time"
            android:layout_centerVertical="true"
            android:textSize="@dimen/phr_text_size_12"
            android:layout_toStartOf="@+id/phr_rv_community_message_share"
            android:layout_marginRight="@dimen/phr_margin_2"
            android:layout_marginEnd="@dimen/phr_margin_2"
            android:padding="@dimen/phr_padding_2"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/phr_text_size_12"
        android:textColor="@color/color_text_title"
        tools:text="@string/phr_community_title"
        android:id="@+id/phr_rv_community_message_title"
        android:paddingTop="@dimen/phr_padding_2"
        android:paddingBottom="@dimen/phr_padding_2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/phr_text_size_10"
        android:textColor="@color/color_text_hint"
        tools:text="@string/phr_community_text"
        android:id="@+id/phr_rv_community_message_body_text"
        android:paddingTop="@dimen/phr_padding_2"
        android:paddingBottom="@dimen/phr_padding_2"
        android:maxLines="3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/phr_width_17"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/phr_margin_2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="@dimen/phr_width_15"
                android:layout_height="@dimen/phr_width_15"
                android:src="@android:color/darker_gray"
                android:id="@+id/phr_rv_community_message_like"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="#FF6666"
                app:allow_random_color="false"
                app:enable_flashing="false"
                app:big_shine_color="#FF6666"
                app:small_shine_color="#CC9999"
                app:click_animation_duration="200"
                app:shine_animation_duration="1500"
                app:shine_count="15"
                app:shine_distance_multiple="1.5"
                app:shine_turn_angle="10"
                app:siShape="@raw/like"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/phr_community_count"
                android:textSize="@dimen/phr_text_size_10"
                android:id="@+id/phr_rv_community_message_like_count"
                android:textColor="@color/color_text_hint"
                android:paddingLeft="@dimen/phr_padding_1"
                android:paddingRight="@dimen/phr_padding_1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <com.sackcentury.shinebuttonlib.ShineButton
                android:layout_width="@dimen/phr_width_15"
                android:layout_height="@dimen/phr_width_15"
                android:src="@color/color_text_hint"
                android:id="@+id/phr_rv_community_message_dislike"
                app:btn_color="@color/color_text_hint"
                app:btn_fill_color="#FF6666"
                app:allow_random_color="false"
                app:enable_flashing="false"
                app:big_shine_color="#FF6666"
                app:small_shine_color="#CC9999"
                app:click_animation_duration="200"
                app:shine_animation_duration="1500"
                app:shine_count="15"
                app:shine_distance_multiple="1.5"
                app:shine_turn_angle="10"
                app:siShape="@raw/dislike"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/phr_community_count"
                android:textSize="@dimen/phr_text_size_10"
                android:textColor="@color/color_text_hint"
                android:paddingLeft="@dimen/phr_padding_1"
                android:paddingRight="@dimen/phr_padding_1"
                android:id="@+id/phr_rv_community_message_dislike_count"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/phr_width_15"
                android:layout_height="@dimen/phr_width_15"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/phr_community_message_fl"
                android:scaleType="centerCrop"
                android:id="@+id/phr_rv_community_message_message"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/phr_community_count"
                android:textSize="@dimen/phr_text_size_10"
                android:id="@+id/phr_rv_community_message_comment_count"
                android:textColor="@color/color_text_hint"
                android:paddingLeft="@dimen/phr_padding_1"
                android:paddingRight="@dimen/phr_padding_1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>