<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/phr_treatment_doc_page_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/phr_margin_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doctor_page_image"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/doctor_page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张医生"
            android:textSize="@dimen/phr_text_size_20"
            android:textColor="@color/phr_black"
            android:layout_marginLeft="@dimen/phr_margin_5"/>

        <TextView
            android:id="@+id/doctor_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主任医师"
            android:textSize="@dimen/phr_text_size_15"
            android:textColor="@color/phr_black"
            android:layout_marginLeft="@dimen/phr_margin_5"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/doctor_page_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/phr_margin_6"
        android:layout_marginTop="@dimen/phr_margin_1">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/doctor_page_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/phr_margin_6"
        android:layout_marginTop="@dimen/phr_margin_3">

    </android.support.v4.view.ViewPager>

</LinearLayout>